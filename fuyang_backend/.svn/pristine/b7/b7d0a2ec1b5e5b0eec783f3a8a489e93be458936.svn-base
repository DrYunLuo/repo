<!-- 审核活动详情页-->
<div id="act_review_detail" ng-controller="actReviewDetailCtrl">
    <div class="content_box">
        <p>活动信息</p>
        <div class="content">
            <div class="row">
                <div class="col-lg-6">
                    活动名称：<span ng-bind="act.title"></span>
                </div>
                <div class="col-lg-6">
                    发布组织：<span ng-bind="act.groupsList[0].name"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    开始时间：<span ng-bind="act.startTime"></span>
                </div>
                <div class="col-lg-6">
                    结束时间：<span ng-bind="act.endTime"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    联系人姓名：<span ng-bind="act.groupsList[0].contactsname"></span>
                </div>
                <div class="col-lg-6">
                    联系人电话：<span ng-bind="act.groupsList[0].contactstel"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="content_box">
        <p>活动描述</p>
        <div class="content">
            <div class="row">
                <div class="col-lg-12">
                    <span ng-bind="act.description"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="button-group">
        <button class="1">通过</button>
        <button class="0">不通过</button>
        <a href="javascript:history.go(-1);void(0);">返回上一层</a>
    </div>
    <div class="reason_box">
        <textarea id="reason" name="reason" style="width: 100%;height:100px;" placeholder="备注（不通过的理由）"></textarea>
    </div>
</div>