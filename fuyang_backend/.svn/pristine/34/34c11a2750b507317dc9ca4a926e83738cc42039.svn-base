/*代码重构*/
body, div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, code, form, fieldset, legend, input, textarea, p, blockquote, th, td
{
    margin:0;padding:0;
    color:#000;
    box-sizing: border-box;
}
table /* 设置table 的样式*/
{
    border-collapse:collapse;
    border-spacing:0;
}
fieldset, img
{
    border:0;
}
em, strong
{
    font-style:normal;
    font-weight:normal;
}
li
{
    list-style:none;
}

body, input, button, textarea
{
    font-size:12px;
    outline: 0;
    font-family:"microsoft yahei",Arial, Helvetica, sans-serif;
}
a{ text-decoration:none;outline:none;color:#000;}
a:hover{ color:red;text-decoration:none;cursor:pointer;}
th, td{vertical-align:top;}
.dn{
    display: none;
}
.db{
    display: block;
}
.fl{
    float: left;
}
.fr{
    float: right;
}
.notice{
    color: #E84C3D !important;
}
.container{
    width:78%;
}
table thead tr td{
    color:#E84C3D;
    font-weight: bold;
}
.cpwd_table tr td:last-child{
    width:120px;
}

/*编辑管理*/
.edit_box{
    border:1px solid #cbcccd;
    border-radius: 8px 8px;
    overflow: hidden;
}
.edit_box ul li{
    float: left;
    width: 160px;
    height: 120px;
    margin:65px 0 65px 70px;
    border-radius: 5px 5px;
    line-height: 120px;
    font-size: 16px;
    text-align: center;
    color:#666;
    background: #eaeae8;
    cursor: pointer;
}
.edit_box ul li:hover{
    background: #f55d4f;
    color:#eaeae8;
}
/*新闻管理，帖子管理*/
.table_top{
    background:#fab3ad;
    height:45px;
    line-height: 45px;
    overflow: hidden;
}
.table_top ul li{
    float: left;
    margin-left: 40px;
}
.table_top input{
    line-height: 20px;
    width: 275px;
    margin-left: 100px;
    border: 1px solid #fd8d82;
}
.table_top button{
    width:56px;
    height:25px;
    background: linear-gradient(to bottom,#fdaba3,#f66253);
    color: #eaeae8;
    line-height: 20px;
    border: 1px solid #fd8d82;
    border-radius: 2px;
}
.manageTable{
    margin-bottom: 20px;
}
.manageTable tr th,.manageTable tr td{
    height:30px;
    line-height: 30px;
    text-align: center;
    background: #f67064;
}
.manageTable tr td{
    background: #fff;
}
/*新闻编辑*/
.newsEditTable td{
    padding:10px 0;
}
.newsEditTable tr td:nth-child(odd){
    text-align: right;
    font-size: 14px;
    color:#666;
}
.newsEditTable tr td input[type='text'],#news_edit select{
    width:267px;
    height:24px;
    padding-left:10px;
    border: 1px solid #b1b2b5;
    border-radius: 5px 5px;
    outline: 0;
}
#uploadPic{
    position: relative;
}
#uploadPic div{
    width:100px;
    height:20px;
    border-radius: 3px 3px;
    background: #c0c0c0;
    border: 1px solid #ddd;
    text-align: center;
}
#news_edit input[type='file']{
    position: absolute;
    left:0;
    top:10px;
    width:100px;
    height:20px;
    cursor:pointer;
    opacity:0;
    font-size:0;
}
#picView img{
    width: 200px;
    height:80px;
}
.newsEditTable textarea{
    border-radius: 5px 5px;
    resize: none;
    outline: 0;
}
#bt-edit{
    width: 170px;
    height: 38px;
    display: block;
    border:0;
    outline: 0;
    margin:0 auto;
    color: #fff;
    font-size: 14px;
    background: #f65242;
    border-radius: 19px 19px;
}
.button-group{
    text-align: center;
}
.button-group button{
    width:90px;
    height:35px;
    border:0;
    border-radius: 4px 4px;
    font-size: 16px;
    margin: 10px 20px;
    background: #dedfe0;
    color: #9b9797;
}
.button-group button:hover{
    background: #e84d3d;
    color: #fff;
}
.button-group a{
    color:#e84d3d;
}
.button-group a:hover{
    text-decoration: underline;
}
.reason_box textarea{
    padding:10px;
    resize: none;
    border-radius: 5px 5px;
}
.reason_box textarea.failPass{
    border: 1px solid red;
}
