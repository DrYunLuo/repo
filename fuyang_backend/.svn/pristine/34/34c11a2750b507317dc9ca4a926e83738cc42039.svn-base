    }
    #create_active input{
        border:1px solid #e84c3d;
        width:120px;
    }
    #create_active textarea{
        border: 2px solid #e84c3d;
        padding:5px 10px;
        resize: none;
        font-size: 16px;
        border-radius: 8px 8px;
        outline: 0;
    }
    #create_active .bt-submit{
        width:110px;
        height:28px;
        border: 0;
        background: #e84c3d;
        color: #fff;
        border-radius: 5px 5px;
        outline: 0;
    }
    #create_active .third{
        margin-top: 10px;
        text-align: center;
    }
    .table_box{
        padding: 20px 0;
    }
    .table{
        width: 80%;
        border-top: 1px solid #d2d2d2;
        border-left: 1px solid #d2d2d2;
        margin:0 auto 20px;
        text-align: center;
    }
    .table td{
        border-bottom: 1px solid #d2d2d2;
        border-right: 1px solid #d2d2d2;
        height:35px;
        line-height: 35px;
    }
    .table tr td:nth-child(1){
        width: 25%;
    }
    #newVolun_review .table tr td:nth-child(1),
    #volun_review .table tr td:nth-child(1){
        width:15%;
    }
    .table tr td:nth-child(2){
        width: 20%;
    }
    #newVolun_review .table tr td:nth-child(2),
    #volun_review .table tr td:nth-child(2){
        width:15%;
    }
    .table tr td:nth-child(3){
        width: 20%;
    }
    #change_pwd .content_box:last-child .content>div{
        width:450px;
        margin:0 auto;
    }
    .cpwd_table tr td{
        padding:0 10px;
    }
    .cpwd_table tr td:first-child{
        text-align: right;
    }
    .cpwd_table tr td input{
        width:222px;
        height:28px;
        outline: 0;
        background: #fafafa;
        padding-left: 5px;
        border: 1px solid #d4d4d4;
    }
    .bt-save{
        width: 90px;
        height:36px;
        background:#e84c3d;
        border: 1px solid #d4b380;
        border-radius: 5px 5px;
        color: #fff;
        font-size: 14px;
        font-weight: bold;
        margin: 30px 0 10px 150px;
    }
}
