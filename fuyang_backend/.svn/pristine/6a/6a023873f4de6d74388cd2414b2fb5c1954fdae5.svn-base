

.volun_detail{
    padding:15px 0;
}
.volun_content{
    padding: 0;
}
.volun_person{
    width:80%;
    background-color: #fff;
    overflow: hidden;
    margin: 0 auto;
    padding-top: 20px;
}
.volun_person_img{
    line-height:19px;
    padding:5px 7px;
    border-bottom:2px solid #dcdcdc;
}
.volun_person_img div{
    padding: 0;
}
.volun_person_img img{
    padding:0;
}
.volun_person:after{
    content: '';
    display: block;
    clear: both;
}
.zan_volun{
    float: left;
    padding:0 0;
}
.share_volun{
    float: right;
    padding:0 0;
}
.zan_volun_img{
    display: inline-block;
    width:12px;
    height:12px;
    background: url("../img/zan.png")no-repeat center center;
}
.share_volun_img{
    display: inline-block;
    width:12px;
    height:12px;
    background: url("../img/share.png")no-repeat center center;
}
.volun_news{
    margin-top: 0;
}
@media screen and (min-width: 1400px) {
    .volun_person_img{
        padding:5px 10px;
    }
}