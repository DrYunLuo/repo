<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <script src="js/jquery-1.11.3.js"></script>
    <title>详情</title>
    <style>
        *{
            font-size: 20px;
            font-family:Microsoft YaHei,Arial, Helvetica,"\534E\6587\9ED1\4F53", sans-serif;
            font-size:16px;
            color:#000;
        }
    </style>
</head>
<body>
<div style="width: 90%;margin: 0 auto;">
    <h2 style="font-size:20px;font-weight:normal;width:100%;text-align:center;">新闻标题</h2>
   
    <div class="img">
        <img class="img1" style="width:100%;height:200px;" src="">
        
    </div>

    <p style="color:#666;">新闻内容</p>
</div>
<script>
    $(function(){
        function GetQueryString(name){
            var reg = new RegExp("(^|&)"+ name +"=([^&]*)(&|$)");
            var r = window.location.search.substr(1).match(reg);
            if(r!=null)return  unescape(r[2]); return null;
        }
        var id=GetQueryString("id");
        $.get('/fuyang_backend/news/getNewById?id='+id, function (data) {
            console.log(data);
            $("h2").text(data.data[0].title);
          
            $(".img1").attr("src",data.data[0].image);
           
            $("p").text(data.data[0].content);
        })
    })
</script>
</body>
</html>