<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge.chrome=1"/>
    <title>后台管理</title>
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/system.css">
    <script src="js/jquery-1.11.3.js"></script>
    <style>
        .father{
            width:100%;
        }
        .container{
            width:80%;
            padding: 30px 0;
            border:2px solid #cccccc;
            padding-left:100px;
        }
        .btn{
            width:35%;
        }
        .form-group{
            margin-left:100px;
        }
        .col-sm-10{
            width:80%;
            padding-right:200px;
        }
        .form-horizontal{
            margin: 0 auto;
        }
        .header{
            width:100%;
        }
        h2{
            width:30%;
            line-height:80px;
            text-align: center;
            margin: 0 auto;
            background-color: #aaa;
            border-radius: 8px;

        }
    </style>

</head>
<body>
<div class="father">
    <div class="header">
        <h2>活动信息填写</h2>
    </div>
    <div class="container">

        <form class="form-horizontal" id="form" role="form" action="/system_manager/campaigns/add" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="inputtext1" class="col-sm-2 control-label">选择组织</label>
                <div class="col-sm-10">
                    <select required="required" name="groupId" id="selec" class="form-control">
                        <option>--请选择--</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="inputtext1" class="col-sm-2 control-label">活动标题</label>
                <div class="col-sm-10">
                    <input onblur="textTest()" required="required" value="飞翔天下" type="text" name="title" class="form-control" id="inputtext1" placeholder="请输入名称">
                </div>
            </div>
            <div class="form-group">
                <label for="inputtext2" class="col-sm-2 control-label">活动主题</label>
                <div class="col-sm-10">
                    <input value="飞翔天下" required="required" onblur="textTest()" name="theme" type="text" class="form-control" id="inputtext2" placeholder="请填写..">
                </div>
            </div>
            <div class="form-group">
                <label for="inputtext20" class="col-sm-2 control-label">活动类型</label>
                <div class="col-sm-10">
                    <!--<input value="123" name="type" required="required" onblur="textTest()" type="text" class="form-control" id="inputtext20" placeholder="请填写..">-->
                    <select name="type" id="active_type" required="required" id="inputtext20" class="form-control">
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="datetime-local1" class="col-sm-2 control-label">报名时间</label>
                <div class="col-sm-10">
                    <input type="datetime-local" required="required" name="enter_time" class="form-control" id="datetime-local1" placeholder="请填写...">
                </div>
            </div>
            <div class="form-group">
                <label for="datetime-local" class="col-sm-2 control-label">开始时间</label>
                <div class="col-sm-10">
                    <input type="datetime-local" required="required" name="start_time" class="form-control" id="datetime-local" placeholder="请填写...">
                </div>
            </div>
            <div class="form-group">
                <label for="datetime-local2" class="col-sm-2 control-label">结束时间</label>
                <div class="col-sm-10">
                    <input type="datetime-local" required="required" name="end_time" class="form-control" id="datetime-local2" placeholder="请填写...">
                </div>
            </div>
            <div class="form-group">
                <label for="inputdate1" class="col-sm-2 control-label">活动地点</label>
                <div class="col-sm-10">
                    <input value="飞翔天下" required="required" onblur="textTest()" name="location" type="text" class="form-control" id="inputdate1" placeholder="请填写..">
                </div>
            </div>
            <div class="form-group">
                <label for="inputtext6" class="col-sm-2 control-label">限制人数</label>
                <div class="col-sm-10">
                    <input type="number" required="required" name="limit" min="1" value="1" class="form-control" step="5" id="inputtext6">
                </div>
            </div>
            <div class="form-group">
                <label for="inputtext8" class="col-sm-2 control-label">资金来源</label>
                <div class="col-sm-10"><input value="飞翔天下" required="required" name="captical_source" onblur="textTest()" type="text" class="form-control" id="inputtext8" placeholder="请填写..">
                </div>
            </div>
            <div class="form-group">
                <label for="inputtext9" class="col-sm-2 control-label">资金</label>
                <div class="col-sm-10"><input required="required" value="10" type="number" name="captical" class="form-control" id="inputtext9" placeholder="请填写..">
                </div>
            </div>
            <div class="form-group">
                <label for="number1" class="col-sm-2 control-label">奖励积分</label>
                <div class="col-sm-10"><input required="required" value="10" type="number" name="award" class="form-control" id="number1" placeholder="请填写..">
                </div>
            </div>
            <div class="form-group">
                <label for="inputtext10" class="col-sm-2 control-label">受益对象</label>
                <div class="col-sm-10"><input required="required" onblur="textTest()" value="飞翔天下" name="benefit_object" type="text" class="form-control" id="inputtext10" placeholder="请填写..">
                </div>
            </div>
            <div class="form-group">
                <label for="inputtext11" class="col-sm-2 control-label">受益人数</label>
                <div class="col-sm-10"><input value="10" required="required" name="benefit_people" type="number" class="form-control" id="inputtext11">
                </div>
            </div>
            <div class="form-group">
                <label for="inputtext21" class="col-sm-2 control-label">年龄段</label>
                <div class="col-sm-10"><input value="10" required="required" name="age_braket" type="text" class="form-control" id="inputtext21">
                </div>
            </div>
            <div class="form-group">
                <label for="sel" class="col-sm-2 control-label">是否推荐</label>
                <div class="col-sm-10">
                    <input type="checkbox" name="recommend" value="on" id="sel">
                    <!--<select name="recomend" id="sel" style="height: 35px;width:100%;border-radius: 3px;">-->
                        <!--<option name="selec">选择</option>-->
                        <!--<option name="jingping">是精品</option>-->
                        <!--<option name="tuijian">不推荐</option>-->
                    <!--</select>-->
                </div>
            </div>
            <div class="form-group">
                <label for="sel1" class="col-sm-2 control-label">是否精品</label>
                <div class="col-sm-10">
                    <input type="checkbox" value="on" name="hottest" id="sel1">
                    <!--<select name="hotest" id="sel1" style="height: 35px;width:100%;border-radius: 3px;">-->
                        <!--<option name="selec">选择</option>-->
                        <!--<option value="1">是精品</option>-->
                        <!--<option name="0">不是精品</option>-->
                    <!--</select>-->
                </div>
            </div>
            <div class="form-group">
                <label for="inputtext14" class="col-sm-2 control-label">活动介绍</label>
                <div class="col-sm-10">
                    <input value="飞翔天下" required="required"  type="text" name="description" class="form-control" id="inputtext14" placeholder="请填写..">
                </div>
            </div>
            <div class="form-group">
                <label for="inputfile" class="col-sm-2 control-label">主题图片</label>
                <div class="col-sm-10">
                    <input type="file" name="uoload" class="form-control" id="inputfile">
                </div>
            </div>
            <div class="form-group">
                <label for="inputfile1" class="col-sm-2 control-label">内容图片</label>
                <div class="col-sm-10">
                    <input type="file" name="image_" class="form-control" id="inputfile1">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" value="提交信息" class="btn btn-default">提交信息</input>
                </div>
            </div>
        </form>
    </div>
</div>
</body>
<script>
    $(function () {
        $.get("/fuyang_backend/groups/getRankingGroups",function(data){
            console.log(data);
            $.each(data.data.list,function(key,value){
                $("#selec").append(key+'<option value='+value._id+'>'+value.name+'</option>');
            });
        },"json");
        $.getJSON('/system_manager/campaign_type/get',function (data) {
            console.log(data);
            $.each(data.types,function(key,value){
                $("#active_type").append(key+'<option value='+value._id+'>'+value.name+'</option>');
            })
        }); 
    })
</script>
</html>